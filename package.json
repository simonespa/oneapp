{
  "name": "oneapp",
  "version": "0.0.1",
  "description": "Single Application",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write '**/*.{js,jsx,scss,json,yml.scss}' .prettierrc",
    "lint:code": "eslint --ext .js,.jsx src test",
    "lint:style": "sass-lint --verbose --no-exit",
    "lint": "npm run lint:code && npm run lint:style",
    "pretest": "npm run lint",
    "test": "npm run test:only",
    "test:only": "nyc mocha --opts ./mocha.opts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonespa/oneapp.git"
  },
  "keywords": [],
  "author": {
    "name": "Simone Spaccarotella",
    "email": "spa.simone@gmail.com",
    "url": "https://www.simonespaccarotella.com"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/simonespa/oneapp/issues"
  },
  "homepage": "https://github.com/simonespa/oneapp#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.10.0",
    "sass-lint": "^1.13.1",
    "sinon": "^7.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "sass-lint --fix --verbose --no-exit",
      "git add"
    ]
  }
}
